{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "experimentalDecorators": true,
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "mocha"]
  },
  "include": ["./src/**/*.ts", "./test/**/*.ts"],
  "ts-node": {
    "files": true
  }
}
