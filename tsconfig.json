{
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "declaration": true,
    "declarationDir": "./dist/types",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "rootDir": "./src",
    "types": [
      "node",
      "mocha"
    ],
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "useDefineForClassFields": false
  },
  "include": [
    "./src",
    "./test"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "ts-node": {
    "files": true
  }
}